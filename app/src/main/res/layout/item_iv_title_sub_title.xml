<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--region Why an additional parent?-->
    <!--An additional parent layout makes sure that irrespective of
    margin and padding settings, we get full area for common operations
     per cell/row such as ripple effect-->
    <!--endregion-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lytItemParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        tools:targetApi="jelly_bean">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/v_lay_cl_content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/com_dim_app_space"
            android:paddingLeft="@dimen/com_dim_app_space"
            android:paddingEnd="@dimen/com_dim_app_space"
            android:paddingRight="@dimen/com_dim_app_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/v_civ"
                android:layout_width="@dimen/com_dim_height_image_in_list"
                android:layout_height="@dimen/com_dim_width_image_in_list"
                app:civ_border="true"
                app:civ_border_color="@color/design_default_color_primary_dark"
                app:civ_border_width="@dimen/com_dim_width_border"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/v_tv_title"
                style="@style/TvTitle.Beside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@id/v_civ"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/v_civ"
                app:layout_constraintTop_toTopOf="@+id/v_civ"
                />

            <!--region Alignments-->
            <!--Starting point is aligned with @v_tv_title and end alignment
            is with respect to parent-->
            <!--endregion-->
            <TextView
                android:id="@+id/v_tv_sub_title"
                style="@style/TvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/com_dim_view_space_10"
                android:layout_marginRight="@dimen/com_dim_view_space_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@id/v_tv_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@id/v_tv_title"
                app:layout_constraintTop_toBottomOf="@id/v_tv_title"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/com_dim_height_divider"
            android:alpha="0.1"
            android:background="@android:color/black"
            android:layout_marginTop="@dimen/com_dim_app_space"
            app:layout_constraintTop_toBottomOf="@+id/v_lay_cl_content_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>